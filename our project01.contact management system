#include <windows.h>
#include <unistd.h>
#include <stdio.h>
#include <string.h>
#include <stdbool.h>
#include <stdlib.h>


bool isRunning = true;
void Menu();           //muhtasim
void AddNewNumber();    //shohidul
void ShowAllContacts();
void SearchContact();
void EditContact();    //shohidul
void DeleteContact();    //shohidul
void DeleteAllContacts();    //shohidul
void PrintLineWithSpace(char *Name[20],char ContactInfo);
void ShowPhoneWithSpace(char *Phone[20]);
void ShowEmailWithSpace(char *Email[30]);
void ErrorAndRestart(char *error[100]);   //muhtasim
bool AlreadyExists(char *GivenLine[30],char ContactInfo);
void GoBackOrExit();    //muhtasim
void Exit();

int main()    //MUHTASIM
{
    int i;
    printf("\t\t\t\t");
    system("COLOR F0");
    char AppStart[100] = "Application is Starting....";
    for(i=0;i<strlen(AppStart);i++)
    {
        printf("%c",AppStart[i]);
        Sleep(45);
    }
    system("cls");


    while(isRunning == true)
        {
        Menu();
        char *str[100];
        char option;
        scanf("%s",&str);
        option = str[0];
        switch(option)
        {
            case '0':
                Exit();
                break;
            case '1':
                AddNewContact();
                break;
            case '2':
                ShowAllContacts();
                break;
            case '3':
                SearchContact();
                break;
            case '4':
                EditContact();
                break;
            case '5':
                DeleteContact();
                break;
            case '6':
                DeleteAllContacts();
                break;
            case '7':
                system("cls");
                break;
            default:
                ErrorAndRestart("Option not found!");
                break;
        }
    }

    return 0;
}

void Menu()   //MUHTASIM
{
    printf("\n\t\t\t\t\t\tMAIN MENU\n");
    printf("\t\t\t\t\t======================\n");
    printf("\t\t\t\t\t 1. Add a new Contact\n\n");
    printf("\t\t\t\t\t 2. Show all Contacts\n\n");
    printf("\t\t\t\t\t 3. Search for contact\n\n");
    printf("\t\t\t\t\t 4. Edit a Contact\n\n");
    printf("\t\t\t\t\t 5. Delete a Contact\n\n");
    printf("\t\t\t\t\t 6. Delete All Contact\n\n");
    printf("\t\t\t\t\t 7. Clear Window\n\n");
    printf("\t\t\t\t\t 0. Exit\n\t\t\t\t\t======================\n\t\t\t\t\t");
    printf("Select an option:");
}
